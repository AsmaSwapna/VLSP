# remove file if it is there
#echo "Removing file $1.txt, if it is there"
rm $1.txt 2> /dev/null
awk 'BEGIN { FS = "\t" } {a1[FNR-1]+=$2;a2[FNR-1]+=$3;a3[FNR-1]+=$4;a4[FNR-1]+=$5;a5[FNR-1]+=$6;a6[FNR-1]+=$7;a7[FNR-1]=$8;a8[FNR-1]+=$9;a9[FNR-1]+=$10;a10[FNR-1]+=$11;a11[FNR-1]+=$12;c[FNR-1]++;}END{for(i=0;i<FNR;i++){gsub(/ /,"_",a7[i]);print i,a1[i]/c[i],a2[i]/c[i],a3[i]/c[i],a4[i]/c[i],a5[i]/c[i],a6[i]/c[i],a7[i],a8[i]/c[i],a9[i]/c[i],a10[i]/c[i],a11[i]/c[i];}}' $1.* > $1.txt
